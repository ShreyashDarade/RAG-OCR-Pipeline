# ============================================
# RAG-OCR Pipeline Environment Configuration
# ============================================
# Copy this file to .env and fill in the values

# =========================
# Application Settings
# =========================
APP_NAME=OCR-rag
ENVIRONMENT=production
DATA_DIR=./data

# =========================
# Elasticsearch Cloud (REQUIRED)
# =========================
# 1. Sign up at: https://cloud.elastic.co/
# 2. Create a deployment
# 3. Get Cloud ID from: Deployment > Manage
# 4. Create API Key from: Deployment > Security > API Keys

ES_CLOUD_ID=your-deployment:base64encodedstring...
ES_API_KEY=your-api-key-here

# Index names (optional, defaults shown)
ES_INDEX_TEXT=doc-text
ES_INDEX_TABLES=doc-tables
ES_INDEX_IMAGES=doc-images

# =========================
# OpenAI Configuration (REQUIRED)
# =========================
# Get your API key from: https://platform.openai.com/api-keys

OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# LLM Model for Q&A
OPENAI_MODEL=gpt-4o-mini

# Embedding Model
# Options: text-embedding-3-small (cheap), text-embedding-3-large (better)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# For Azure OpenAI (optional):
# OPENAI_BASE_URL=https://your-resource.openai.azure.com/

# =========================
# Chunking Settings
# =========================
CHUNK_SIZE=800
CHUNK_OVERLAP=200
KEYWORD_TOP_K=20
MIN_CHUNK_SIZE=100

# =========================
# Retrieval Settings
# =========================
RETRIEVER_TOP_K=10
HYBRID_ALPHA=0.5
RERANK_ENABLED=true
RERANK_TOP_K=6

# =========================
# Document Linkage
# =========================
ENABLE_CROSS_REFERENCES=true
PAGE_CONTEXT_WINDOW=1

# =========================
# API Settings
# =========================
RATE_LIMIT_PER_MINUTE=100
MAX_WORKERS=4
REQUEST_TIMEOUT_SECONDS=120

# =========================
# Caching (Optional)
# =========================
CACHE_TTL_SECONDS=3600
USE_REDIS_CACHE=false
REDIS_URL=redis://localhost:6379

# =========================
# OCR Settings
# =========================
OCR_GPU_ENABLED=true
OCR_BATCH_SIZE=5
# Supported: en (English), mr (Marathi), hi (Hindi)
